{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.4.451.19169",
      "templateHash": "11506958063772724748"
    }
  },
  "parameters": {
    "basename": {
      "type": "string",
      "defaultValue": "fitonfhir",
      "maxLength": 16,
      "minLength": 3,
      "metadata": {
        "description": "Base name that is used to name provisioned resources. Should be alphanumeric and less than 16 characters."
      }
    }
  },
  "functions": [],
  "variables": {
    "vKeyVaultName": "[format('kv-{0}', parameters('basename'))]",
    "vFhirServiceName": "[format('ha-{0}', parameters('basename'))]",
    "vIomtConnectorName": "[format('im-{0}', parameters('basename'))]",
    "vIomtConnectionName": "[format('ic-{0}', parameters('basename'))]"
  },
  "resources": [
    {
      "type": "Microsoft.HealthcareApis/services",
      "apiVersion": "2021-01-11",
      "name": "[variables('vFhirServiceName')]",
      "location": "[resourceGroup().location]",
      "kind": "fhir-R4",
      "properties": {
        "authenticationConfiguration": {
          "audience": "[format('https://{0}.azurehealthcareapis.com', variables('vFhirServiceName'))]",
          "authority": "[uri(environment().authentication.loginEndpoint, subscription().tenantId)]"
        }
      }
    },
    {
      "type": "Microsoft.HealthcareApis/services/iomtconnectors",
      "apiVersion": "2020-05-01-preview",
      "name": "[variables('vIomtConnectorName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "serviceConfiguration": {
          "resourceIdentityResolutiontype": "Create"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/services', variables('vFhirServiceName'))]"
      ]
    },
    {
      "type": "Microsoft.HealthcareApis/services/iomtconnectors/connections",
      "apiVersion": "2020-05-01-preview",
      "name": "[variables('vIomtConnectionName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/services/iomtconnectors', split(variables('vIomtConnectorName'), '/')[0], split(variables('vIomtConnectorName'), '/')[1])]"
      ]
    },
    {
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2019-09-01",
      "name": "[variables('vKeyVaultName')]",
      "location": "[resourceGroup().location]",
      "properties": {
        "sku": {
          "family": "A",
          "name": "standard"
        },
        "accessPolicies": [
          {
            "tenantId": "[subscription().tenantId]",
            "objectId": "[subscription().tenantId]",
            "permissions": {
              "secrets": [
                "all"
              ]
            }
          }
        ],
        "tenantId": "[subscription().tenantId]",
        "enableSoftDelete": true,
        "enablePurgeProtection": true,
        "softDeleteRetentionInDays": 30
      }
    },
    {
      "type": "Microsoft.KeyVault/vaults/secrets",
      "apiVersion": "2021-04-01-preview",
      "name": "[format('{0}/eventHubConnStr', variables('vKeyVaultName'))]",
      "properties": {
        "value": "[listkeys(resourceId('Microsoft.HealthcareApis/services/iomtconnectors/connections', split(variables('vIomtConnectionName'), '/')[0], split(variables('vIomtConnectionName'), '/')[1], split(variables('vIomtConnectionName'), '/')[2]), '2020-05-01-preview').primaryConnectionString]",
        "contentType": "string"
      },
      "dependsOn": [
        "[resourceId('Microsoft.HealthcareApis/services/iomtconnectors/connections', split(variables('vIomtConnectionName'), '/')[0], split(variables('vIomtConnectionName'), '/')[1], split(variables('vIomtConnectionName'), '/')[2])]",
        "[resourceId('Microsoft.KeyVault/vaults', variables('vKeyVaultName'))]"
      ]
    }
  ],
  "outputs": {
    "keyVaultName": {
      "type": "string",
      "value": "[variables('vKeyVaultName')]"
    }
  }
}
